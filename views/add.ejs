<%- include('partials/header', { title: 'Add Proverb' }) %>

<div class="container my-5">
  <h2 class="mb-4 text-center">Add a New Proverb</h2>

  <form method="POST" action="/proverbs" class="border p-4 rounded shadow-sm bg-light">
    
    <div class="mb-3">
      <label for="textDari" class="form-label">Dari</label>
      <input type="text" id="textDari" name="textDari" class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="textPashto" class="form-label">Pashto</label>
      <input type="text" id="textPashto" name="textPashto" class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="translationEn" class="form-label">English Translation</label>
      <input type="text" id="translationEn" name="translationEn" class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="meaning" class="form-label">Meaning</label>
      <input type="text" id="meaning" name="meaning" class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">Category</label>
      <input type="text" id="category" name="category" class="form-control" required />
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary px-4">Add Proverb</button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
